<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9000"
        android:layout_alignTop="@+id/img_band"
        android:layout_alignBottom="@+id/img_band"/>

    <TextView
        android:id="@+id/tv_band_name"
        style="@style/TextBase.White"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_band_genre"
        style="@style/TextBase.White"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_band_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>