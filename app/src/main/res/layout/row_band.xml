<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#9FFF"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_band"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>


            <TextView
                android:id="@+id/tv_band_name"
                style="@style/TextBase"
                android:layout_toRightOf="@+id/img_band"
                android:layout_toLeftOf="@+id/img_arrow"
                android:textSize="22sp"
                app:fontPath="fonts/Old_Press_Italic.ttf"
                android:lines="1"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tv_band_genre"
                style="@style/TextBase"
                android:layout_alignLeft="@+id/tv_band_name"
                android:layout_below="@+id/tv_band_name"
                android:layout_toLeftOf="@+id/img_arrow"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Jazz"/>

            <TextView
                android:id="@+id/tv_band_description"
                style="@style/TextBase"
                android:lines="3"
                android:textSize="14sp"
                android:layout_alignLeft="@+id/tv_band_name"
                android:layout_toLeftOf="@+id/img_arrow"
                android:layout_below="@+id/tv_band_genre"
                android:text="asdlfkjasldf asñdkfjñalsf jñlaskfj ñlaskfjñalskfjñ asfjñ asklf lñaskjlkasjdf ñlasf ñlaskf lña"/>


            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow_right_intro"
                android:tint="@color/colorAccent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>