<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#9FFF"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@mipmap/img_default_grid"
                android:alpha="0.25"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_band"
                android:layout_alignTop="@+id/img_band"
                android:background="#0000" />

            <TextView
                android:id="@+id/tv_band_name"
                style="@style/TextBase.Bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:lines="2"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_band_genre"
                style="@style/TextBase.White"
                android:layout_below="@id/tv_band_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_band_description"
                style="@style/TextBase.White"
                android:layout_below="@id/tv_band_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>