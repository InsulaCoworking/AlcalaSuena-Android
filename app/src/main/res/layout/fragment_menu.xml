<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_bg_menu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#fff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_menu_bands"
                style="@style/LinearMenu">

                <ImageView
                    style="@style/ImageMenuIcon"
                    android:src="@mipmap/ic_menu_bands" />

                <TextView
                    style="@style/BtnMenu"
                    android:text="@string/bands" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_menu_venues"
                style="@style/LinearMenu">

                <ImageView
                    style="@style/ImageMenuIcon"
                    android:src="@mipmap/ic_menu_venues" />

                <TextView
                    style="@style/BtnMenu"
                    android:text="@string/venues" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_menu_map"
                style="@style/LinearMenu">

                <ImageView
                    style="@style/ImageMenuIcon"
                    android:src="@mipmap/ic_menu_map" />

                <TextView
                    style="@style/BtnMenu"
                    android:text="@string/map" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_menu_news"
                style="@style/LinearMenu">

                <ImageView
                    style="@style/ImageMenuIcon"
                    android:src="@mipmap/ic_news" />

                <TextView
                    style="@style/BtnMenu"
                    android:text="@string/news" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_menu_about"
                style="@style/LinearMenu">

                <ImageView
                    style="@style/ImageMenuIcon"
                    android:src="@mipmap/ic_menu_info2" />

                <TextView
                    style="@style/BtnMenu"
                    android:text="@string/about_alcalasuena" />

            </LinearLayout>

            <View style="@style/SeparatorHorizontal.Grey" />

            <View style="@style/XpansorVert" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_developed"
                    style="@style/TextBase.Bold"
                    android:layout_below="@+id/img_logo_insula"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/developed_by_insula"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/btn_about_insula"
                    style="@style/LinearMenu">

                    <ImageView
                        style="@style/ImageMenuIcon"
                        android:src="@mipmap/logo_bullet" />

                    <TextView
                        style="@style/BtnMenu"
                        android:text="@string/about_app" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_dark_general"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/TextBase.Inverted"
                    android:text="@string/sponsor"/>

                <ImageView
                    android:id="@+id/btn_logo_mahou"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_logo_radler"
                    android:tag="https://www.amstel.es/"
                    android:visibility="visible"/>

                <TextView
                    style="@style/TextBase.Inverted"
                    android:text="@string/amstel_recomends"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/btn_logo_alcalasuena"
                        style="@style/ImageLogo"
                        android:padding="6dp"
                        android:src="@mipmap/img_logo_alcalasuena"
                        android:tag="http://www.alcalasuena.es/" />

                    <View style="@style/XpansorHoriz" />

                    <ImageView
                        android:id="@+id/btn_logo_alcalaesmusica"
                        style="@style/ImageLogo"
                        android:padding="11dp"
                        android:src="@mipmap/img_logo_alcalaesmusica"
                        android:tag="http://www.alcalaesmusica.org/" />
                    <View style="@style/XpansorHoriz" />

                    <ImageView
                        android:id="@+id/btn_logo_ayto_alcala"
                        style="@style/ImageLogo"
                        android:padding="5dp"
                        android:src="@mipmap/img_logo_ayto_alcala"
                        android:tag="http://ayto-alcaladehenares.es/" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>