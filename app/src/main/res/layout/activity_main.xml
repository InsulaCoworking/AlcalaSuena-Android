<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    tools:context="com.triskelapps.alcalasuena.ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:alpha="@dimen/alpha_imgs_bg"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_bg_2019" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="@color/bg_color_main"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.DrawerLayout
                android:id="@+id/drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/content_main" />

                <fragment
                    android:id="@+id/menu_fragment"
                    class="com.triskelapps.alcalasuena.ui.menu.MenuFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    tools:layout="@layout/fragment_menu" />

                <fragment
                    android:id="@+id/filter_bands_fragment"
                    class="com.triskelapps.alcalasuena.ui.filter.FilterBandsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20dp"
                    tools:layout="@layout/fragment_filter_bands" />

            </android.support.v4.widget.DrawerLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btn_send_news"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:background="@drawable/bg_btn_send_news"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_news"
                android:visibility="gone"
                app:tint="@color/white" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_new_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/headers_main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp"
        android:visibility="visible">

        <TextView
            style="@style/TextBase"
            android:layout_weight="1"
            android:text="@string/new_version" />

        <TextView
            android:id="@+id/btn_update_new_version"
            style="@style/TextBase"
            android:background="@drawable/background_pressed_custom"
            android:padding="5dp"
            android:text="@string/update"
            android:textAllCaps="true"
            app:fontPath="fonts/Exo-Medium.otf" />

        <TextView
            android:id="@+id/btn_hide_new_version"
            style="@style/TextBase.Inverted"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_pressed_custom"
            android:padding="5dp"
            android:textColor="@color/tab_unselected"
            android:text="@string/later"
            android:textSize="14sp"
            android:textAllCaps="true" />


    </LinearLayout>
</RelativeLayout>