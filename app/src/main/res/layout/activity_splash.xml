<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    tools:context="com.triskelapps.alcalasuena.ui.intro.IntroActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="@dimen/alpha_imgs_bg"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_bg_2019" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:src="@mipmap/img_presentacion_alcalasuena" />

    <TextView
        android:id="@+id/tv_splash_info"
        style="@style/TextBase"
        android:text="@string/preparing_app_edition_current_year"
        android:gravity="center"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"/>

</RelativeLayout>