<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/headers_main"/>
            <stroke android:width="3dp" android:color="@color/text_color_main" />
        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/headers_main"/>
            <stroke android:width="2dp" android:color="@color/text_color_main" />
        </shape>

    </item>

</selector>
