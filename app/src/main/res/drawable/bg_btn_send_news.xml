<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <layer-list>
            <item android:top="3dp"
                android:left="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/transp_black" />
                </shape>
            </item>
            <item android:bottom="3dp"
                android:right="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/headers_main" />
                    <stroke android:width="0dp" android:color="@color/text_color_main" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item>
        <layer-list>
            <item android:top="3dp"
                android:left="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/shadow" />
                </shape>
            </item>
            <item android:bottom="3dp"
                android:right="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/headers_main" />
                    <stroke android:width="0dp" android:color="@color/text_color_main" />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>
